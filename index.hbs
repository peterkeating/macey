{{!< default}}

{{#if @blog.logo}}<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
<h1>{{@blog.title}}</h1>
<h2>{{@blog.description}}</h2>

{{#foreach posts}}

<div class="{{post_class}}">
    <span class="post-meta">{{date format="DD MMM YYYY"}} {{#if tags}}on {{tags}}{{/if}}</span>
    <h2><a href="{{url}}">{{{title}}}</a></h2>
    <p>{{excerpt}}&hellip;</p>
</div>

{{/foreach}}

{{pagination}}
