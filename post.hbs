{{!< default}}

<div class="{{post_class}}">
    {{#post}}

    <div class="post-meta">{{date format='DD MMM YYYY'}} {{#if tags}}on {{tags separator=" | "}}{{/if}}</div>

    <h2 class="post-title">{{{title}}}</h2>

    <div class="post-content">
        {{content}}
    </div>

    {{/post}}
</div>
